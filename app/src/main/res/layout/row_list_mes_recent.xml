<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="3dp"
    android:background="@mipmap/background_item_list"
    android:layout_height="70dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon_avatar"
            android:id="@+id/row_addfriend_avatar" /><LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorwhite"
            android:text="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/row_list_mes_recent_textname" />

        <TextView
            android:layout_marginTop="3dp"
            android:textSize="14sp"
            android:textColor="@color/colorwhite"
            android:text="0123456789"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/row_list_mes_recent_message" />
    </LinearLayout>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/colorwhite"
            android:layout_gravity="center"
            android:id="@+id/row_list_mes_recent_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>